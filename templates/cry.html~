<html>
    <script src="{{STATIC_URL}}jquery-1.7.2.min.js"></script>
    <script type="text/javascript">
    $("#myNameForm").submit(function(e) {
        e.preventDefault();
        serializedData = $("#myNameForm").serialize();

        $.ajax({
           url: "/donate/",
           type: "post",
           data: serializeData,
           cache: 'false',
           dataType: "json",
           async: 'true',

           success: function(data) {
               alert(data)
           },
           error:function(data) {
               alert("error in getting from server")
           },
        });
    });  
    </script>
    <body>
    <form id="myNameForm" method="post" action="">
       {% csrf_token %}
       <input type="text" id="name" />
       <input type="submit" value="submit" id="submitButton" />
    </form>
    <body>
</html>
